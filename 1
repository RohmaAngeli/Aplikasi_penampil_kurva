//Prosedur menampilkan sumbu xy di image
procedure TForm1.FormCreate(Sender: TObject);
var
  x, y: integer;
begin
  for x := -image1.ClientWidth to image1.ClientWidth do
  begin
    y := image1.ClientHeight div 2;
    image1.Canvas.Pixels[x, y] := clBlack;
  end;

  for y := -image1.ClientHeight to image1.ClientHeight do
  begin
    x := image1.ClientWidth div 2;
    image1.Canvas.Pixels[x, y] := clBlack;
  end;
end;

//Prosedur menampilkan garis vertikal 1
procedure TForm1.BitBtn1Click(Sender: TObject);
var
  x, y: integer;
begin
  for y := -image1.ClientHeight to image1.ClientHeight do
  begin
    x := image1.ClientWidth div 4;
    image1.Canvas.Pixels[x, y] := clAqua;
  end;
end;

//Prosedur menampilkan garis vertikal 2
procedure TForm1.BitBtn2Click(Sender: TObject);
var
  x, y: integer;
begin
  for y := -image1.ClientHeight to image1.ClientHeight do
  begin
    x := image1.ClientHeight - image1.ClientWidth div 4;
    image1.Canvas.Pixels[x, y] := clAqua;
  end;
end;
